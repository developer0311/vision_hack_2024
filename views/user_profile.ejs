<%- include('partials/header') %>
        <section class="profile">
            <div class="container">
                <div class="profile-header text-center">
                    <img src="<%= profile.profile_image_url %>"
                        alt="Profile Picture">
                    <br>
                    <br>
                    
                    <h2><%= profile.first_name %> <%= profile.last_name %></h2>
                    <p class="p-2 mb-3">@<%= profile.username %></p>

                    <!-- <div class="d-flex justify-content-center p-2">
                        <span style="width: 200px;">Web Developer</span> | 
                        <span style="width: 200px;">Tech Enthusiast</span> | 
                        <span style="width: 200px;">Chai Lover</span>
                    </div> -->
                    <!-- <br> -->

                    <div class="d-flex justify-content-center">
                        <div class="row e-f-f">
                            <div class="col-4 d-flex p-3 justify-content-center flex-column e-f-f-options">
                                <p class="count">
                                    <%= profile.eco_purchases + profile.recycled_purchases +
                                        profile.locally_sourced_purchases %>
                                </p>
                                <p>Eco Contributions</p>
                            </div>
                            <div class="col-4 d-flex justify-content-center flex-column ">
                                <p class="count follower-count">
                                    <%= profile.total_follower %>
                                </p>
                                <p>Followers</p>
                            </div>
                            <div class="col-4 d-flex justify-content-center flex-column">
                                <p class="count">
                                    <%= profile.total_following %>
                                </p>
                                <p>Following</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="gallery row">
                    <% post.forEach(element => { %>
                        
                    
                    <div class="col-md-4 col-sm-6">
                        <div class="card mb-4">
                            <div class="card-image">
                                <img src="<%= element.image_url %>"
                                class="card-img-top" alt="Post Image">
                            </div>
                            <div class="card-body">
                                <p class="card-text"><%= element.post_text %></p>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                    
                </div>
            </div>
        </section>

    




    <script src="js/script.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <%- include('partials/footer') %>