<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Create Product</title>
    <link rel="icon" href="/images/favicon.ico">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/admin.css">
</head>

<body>

    <header>
        <h1>Products Management</h1>
        <a href="/admin/1234">Back to Dashboard</a>
    </header>

    <main class="container-fluid mt-4">
        <section class="add-product container-fluid">
            <h2>Add New Product</h2>

            <form class="container-fluid" action="/admin/products/create" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Product Name:</label>
                    <input type="text" id="name" name="name" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label for="company_name" class="form-label">Company Name:</label>
                    <input type="text" id="company_name" name="company_name" class="form-control">
                </div>

                <div class="mb-3">
                    <label for="production_location" class="form-label">Production Location:</label>
                    <input type="text" id="production_location" name="production_location" class="form-control">
                </div>

                <div class="mb-3">
                    <label for="actual_price" class="form-label">Max Price:</label>
                    <input type="number" step="0.01" id="actual_price" name="actual_price" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label">Price:</label>
                    <input type="number" step="0.01" id="price" name="price" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label for="discount_percent" class="form-label">Discount Percent:</label>
                    <input type="number" id="discount_percent" name="discount_percent" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description:</label>
                    <textarea id="description" name="description" class="form-control" required></textarea>
                </div>

                <div class="mb-3">
                    <label for="image_url" class="form-label">Image URL:</label>
                    <input type="url" id="image_url" name="image_url" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label for="category" class="form-label">Category:</label>
                    <input type="text" id="category" name="category" class="form-control" required>
                </div>

                <!-- Eco-Friendliness Level -->
                <div class="mb-3">
                    <label for="eco_friendly" class="form-label">Eco-Friendly Level:</label>
                    <select id="eco_friendly" name="eco_friendly" class="form-control">
                        <option value="0">Not Eco-Friendly</option>
                        <option value="1">Eco-Friendly</option>
                        <option value="2">Highly Eco-Friendly</option>
                    </select>
                </div>

                <!-- Recycled Level -->
                <div class="mb-3">
                    <label for="recycled" class="form-label">Recycled Level:</label>
                    <select id="recycled" name="recycled" class="form-control">
                        <option value="0">Not Recycled</option>
                        <option value="1">Recycled</option>
                        <option value="2">Highly Recycled</option>
                    </select>
                </div>

                <!-- Locally Sourced Level -->
                <div class="mb-3">
                    <label for="locally_sourced" class="form-label">Locally Sourced Level:</label>
                    <select id="locally_sourced" name="locally_sourced" class="form-control">
                        <option value="0">Not Locally Sourced</option>
                        <option value="1">Locally Sourced</option>
                        <option value="2">Highly Locally Sourced</option>
                    </select>
                </div>

                <!-- Rating -->
                <div class="mb-3">
                    <label for="rating" class="form-label">Rating:</label>
                    <input type="number" step="0.01" max="5.00" min="0.00" value="0" id="rating" name="rating" class="form-control">
                </div>

                <button type="submit" class="btn btn-success">Add Product</button>
            </form>

        </section>
    </main>

    <%- include('partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>
