<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - All Products</title>
    <link rel="icon" href="/images/favicon.ico">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/admin.css">
</head>

<body>

    <header>
        <h1>Products Management</h1>
        <a href="/admin/1234">Back to Dashboard</a>
    </header>

    <main class="container-fluid mt-4">

        <section class="manage-products container-fluid">
            <h2>Manage products</h2>

            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Max Price</th>
                            <th scope="col">Price</th>
                            <th scope="col">Offer Percent</th>
                            <th scope="col">Description</th>
                            <th scope="col">Category</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    
                    <% products.forEach(product=> { %>

                        <tbody>
                            <tr>
                                <td scope="col">
                                    <%= product.id %>
                                </td>
                                <td scope="col">
                                    <%= product.name %>
                                </td>
                                <td scope="col">
                                    <%=product.max_price %>
                                </td>
                                <td scope="col">
                                    <%= product.price %>
                                </td>
                                <td scope="col">
                                    <%=product.offer_percent %>%
                                </td>
                                <td scope="col">
                                    <%=product.description %>
                                </td>
                                <td scope="col">
                                    <%=product.category %>
                                </td>
                                <td scope="col" class="actions" colspan="2">
                                    <a class="btn btn-primary"
                                        href="/admin/1234/products/edit/<%= product.id %>">Edit</a> |
                                    <a class="btn btn-danger"
                                        href="/admin/1234/products/delete/<%= product.id %>">Delete</a>
                                </td>
                            </tr>
                        </tbody>
                        <% }) %>
                </table>
            </div>
        </section>
    </main>

    <%- include('partials/footer') %>



        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>

</html>